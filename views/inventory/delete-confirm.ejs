<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<div class="add-inventory-container">
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
    <%  }) %>
       </ul>
    <% } %>
    
    <h2>Delete Vehicle</h2>
    <p>Confirm Deletion - The delete is permanent.</p>
    
    <form id="deleteInventoryForm" action="/inv/delete" method="post">      
        <div class="form-group">
            <label for="inv_make">Make:</label>
            <input type="text" name="inv_make" id="inv_make" required 
                   value="<%= locals.inv_make ? inv_make : '' %>" readonly>
        </div>
        
        <div class="form-group">
            <label for="inv_model">Model:</label>
            <input type="text" name="inv_model" id="inv_model" required
                   value="<%= locals.inv_model ? inv_model : '' %>" readonly>
        </div>
        
        <div class="form-group">
            <label for="inv_year">Year:</label>
            <input type="text" name="inv_year" id="inv_year" required 
                   pattern="^\d{4}$" title="Please enter a 4-digit year"
                   value="<%= locals.inv_year ? inv_year : '' %>" readonly>
        </div>
        
        <div class="form-group">
            <label for="inv_price">Price:</label>
            <input type="number" name="inv_price" id="inv_price" required
                   min="0" step="0.01"
                   value="<%= locals.inv_price ? inv_price : '' %>" readonly>
        </div>
        
        <button type="submit">Delete Vehicle</button>

        <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
        <% } %>>
    </form>
</div>
