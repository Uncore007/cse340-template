<% if (title) { %>
    <h1><%= title %></h1>
<% } else {
    res.redirect('/')
} %>

<%- messages() %>

<div class="add-classification-container">
    <% if (errors) { %>
        <ul class="notice">
       <% errors.array().forEach(error => { %>
         <li><%= error.msg %></li>
    <%  }) %>
       </ul>
    <% } %>
    
    <h2>Add New Classification</h2>
    <p class="form-instructions">Classification names cannot contain spaces or special characters.</p>
    
    <form id="addClassForm" action="/inv/add-classification" method="post">
        <div class="form-group">
            <label for="classification_name">Classification Name:</label>
            <input type="text" name="classification_name" id="classification_name" required 
                   pattern="^[A-Za-z0-9]+$" 
                   title="Classification name cannot contain spaces or special characters">
        </div>
        
        <button type="submit">Add Classification</button>
    </form>
</div>

